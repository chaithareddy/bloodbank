<%= form_for @bss, :html => { :class => "form-horizontal bss" } do |f| %>

  <% if @bss.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bss.errors.count, "error") %> prohibited this bss from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bss.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Name_of_BB, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :Name_of_BB, :class => 'form-control' %>
    </div>
    <%=f.error_span(:Name_of_BB) %>
  </div>
  <div class="form-group">
    <%= f.label :blood_typr, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :blood_typr, :class => 'form-control' %>
    </div>
    <%=f.error_span(:blood_typr) %>
  </div>
  <div class="form-group">
    <%= f.label :Quantity, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :Quantity, :class => 'form-control' %>
    </div>
    <%=f.error_span(:Quantity) %>
  </div>
  <div class="form-group">
    <%= f.label :Address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :Address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:Address) %>
  </div>
  <div class="form-group">
    <%= f.label :Contact_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :Contact_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:Contact_number) %>
  </div>
  <div class="form-group">
    <%= f.label :email_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email_id) %>
  </div>
  <div class="form-group">
    <%= f.label :Working_hours, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :Working_hours, :class => 'form-control' %>
    </div>
    <%=f.error_span(:Working_hours) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bsses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
