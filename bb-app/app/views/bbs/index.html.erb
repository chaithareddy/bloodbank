<p id="notice"><%= notice %></p>

<h1>Listing Bbs</h1>

<table>
  <thead>
    <tr>
      <th>Name of bb</th>
      <th>Blood type</th>
      <th>Quantity</th>
      <th>Address</th>
      <th>Contact number</th>
      <th>Email</th>
      <th>Working hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bbs.each do |bb| %>
      <tr>
        <td><%= bb.Name_of_BB %></td>
        <td><%= bb.Blood_type %></td>
        <td><%= bb.Quantity %></td>
        <td><%= bb.Address %></td>
        <td><%= bb.contact_Number %></td>
        <td><%= bb.email_id %></td>
        <td><%= bb.working_hour %></td>
        <td><%= link_to 'Show', bb %></td>
        <td><%= link_to 'Edit', edit_bb_path(bb) %></td>
        <td><%= link_to 'Destroy', bb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

